{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,  // Add this line
    "declarationMap": true // Optional: Generates source maps for declarations
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
